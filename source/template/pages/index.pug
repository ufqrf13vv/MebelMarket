extends ../_template

block variables
	- var title = 'Главная'
	- var iconsLeader = ['<div class="catalog__item-icon catalog__item-icon--leader"></div>']
	- var iconsSale = ['<div class="catalog__item-icon catalog__item-icon--leader"></div>', '<div class="catalog__item-icon catalog__item-icon--discount">-40%</div>']
	- var iconsNew = ['<div class="catalog__item-icon catalog__item-icon--new">Новинка</div>']

block content
	.slider.slider--main
		.container
			.slider__wrapper
				.slider__arrow.slider__arrow--left
				.slider__arrow.slider__arrow--right
				.slider__slide
					img.slider__image(src="/assets/img/slide.png")
					.slider__slide-info
						.slider__slide-text Новое поступление постельного белья
						.slider__slide-price от 5000 рублей
				ul.slider__dots
					li.slider__dots-item
					li.slider__dots-item.slider__dots-item--current
					li.slider__dots-item
					li.slider__dots-item
		
	section.section
		.section__title 
			.container
				h2.main-title Лидеры продаж
		.container
			+catalogItems(catalogItems, iconsLeader)
	section.section
		.section__title 
			.container
				h2.main-title Акции и скидки
		.container
			+catalogItems(catalogItems, iconsSale)
	section.section
		.section__title 
			.container
				h2.main-title Новинки
		.container
			+catalogItems(catalogItems, iconsNew)
	section.section
		.section__title 
			.container
				h2.main-title Недавно вы смотрели
		.slider.slider_viewed
			.slider__slide
				img.slider__image(src="img/slide1.jpg")
				.slider__info
					p Спальный гарнитур Аллегро белый с 6-ти дверным шкафом
			.slider__slide
				img.slider__image(src="img/slide1.jpg")
				.slider__info
					p Спальный гарнитур Аллегро белый с 6-ти дверным шкафом
			.slider__slide
				img.slider__image(src="img/slide1.jpg")
				.slider__info
					p Спальный гарнитур Аллегро белый с 6-ти дверным шкафом
	section.section.section_features
		.site-description
			img(src="img/site-title.jpg")
			| - интернет-гипермаркет подарков и товаров для дома. Для Вашего дома. Для Вас!
		.features
			.features__feature
				.features__icon.features__icon--good
				.features__info
					p.features__title Отличные цены
					p.features__description Найдете дешевле - вернем разницу. 
						a(href="#") Специальные скидки
			.features__feature
				.features__icon.features__icon--delivery
				.features__info
					p.features__title Быстрая доставка
					p.features__description Доставляем по всей России!  
						a(href="#") Экспресс-доставка
						|  за 3 часа!
			.features__feature
				.features__icon.features__icon--pay
				.features__info
					p.features__title Удобная оплата
					p.features__description Платите где угодно и как угодно! 
						a(href="#") Наличные, безнал, банковские карты