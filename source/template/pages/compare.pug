extends ../_template

block variables
	- var title = 'Сравнение товаров'

block content
	.container
		+breadcrumbs(['Главная', 'Сравнение товаров'])

		h1.main-title.main-title--underline Сравнение товаров
		.lk__links
			a.lk__link(href="#") Все характерисики
			a.lk__link.lk__link--active(href="#") Различающиеся
		.compare
			.compare__wrapper
				.catalog__item.catalog__item--compare
					a.cart__item-remove(href="#")
					.catalog__item-image
						img(src="/assets/img/product-1.jpg")
					.catalog__item-description
						.catalog__item-category Категория
						.catalog__item-name Наименование товара
						.catalog__item-prices
							.catalog__item-price 116 000 руб.
							.catalog__item-oldprice 135 000 руб.
						.catalog__item-links
							a.catalog__item-link.catalog__item-link--cart(href="#") В корзину
								include ../../images/svg/shopping-cart.svg
							a.catalog__item-link.catalog__item-link--small(href="#")
								include ../../images/svg/star.svg
							a.catalog__item-link.catalog__item-link--small(href="#")
								include ../../images/svg/th-list.svg
				.catalog__item.catalog__item--compare
					a.cart__item-remove(href="#")
					.catalog__item-image
						img(src="/assets/img/product-1.jpg")
					.catalog__item-description
						.catalog__item-category Категория
						.catalog__item-name Наименование товара
						.catalog__item-prices
							.catalog__item-price 116 000 руб.
							.catalog__item-oldprice 135 000 руб.
						.catalog__item-links
							a.catalog__item-link.catalog__item-link--cart(href="#") В корзину
								include ../../images/svg/shopping-cart.svg
							a.catalog__item-link.catalog__item-link--small(href="#")
								include ../../images/svg/star.svg
							a.catalog__item-link.catalog__item-link--small(href="#")
								include ../../images/svg/th-list.svg
